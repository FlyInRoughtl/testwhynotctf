set $mod Mod4
set $term alacritty

font pango:monospace 10

exec --no-startup-id $term -e /usr/local/bin/gargoyle --config /etc/gargoyle/gargoyle.yaml start --tui --apply-network

# EmulateEL window styling (best-effort)
for_window [class="GargoyleSilent"] border pixel 2
for_window [class="GargoyleTor"] border pixel 2
for_window [class="GargoyleAmnesic"] border pixel 2

bindsym $mod+Shift+e exec "i3-msg exit"
