# Example config for Gargoyle
system:
  ram_limit_mb: 2048
  cpu_limit: 2
  locale: "ru"
  edition: "public"
  mode: "standard" # standard|fullanon

storage:
  persistent: true
  shared: false
  recovery_codes: "recovery_codes.txt"
  usb_enabled: false
  usb_read_only: false
  ram_only: false
  auto_wipe_on_usb_remove: false
  auto_wipe_on_exit: false

network:
  proxy: ""
  mode: "direct"
  vpn_type: ""
  vpn_profile: ""
  gateway_ip: ""
  proxy_engine: "" # sing-box|xray|hiddify
  proxy_config: ""
  dns_profile: "system" # system|xbox|custom
  dns_custom: ""
  doh_url: ""
  doh_listen: "127.0.0.1:5353"
  tor: false
  tor_always_on: false
  tor_strict: false
  tor_trans_port: 9040
  tor_dns_port: 9053
  tor_use_bridges: false
  tor_transport: "" # obfs4|meek|...
  tor_bridge_lines: [] # list of Bridge lines
  torrc_path: "" # optional custom torrc path
  mac_spoof: true
  wifi_enabled: true
  bluetooth_enabled: false
  ports_open: false

security:
  identity_key_path: "keys/identity.key"
  identity_bits: 256
  identity_group: 5

mesh:
  relay_url: ""
  onion_depth: 3
  metadata_level: "standard"
  transport: "tls" # tcp|tls
  padding_bytes: 256 # optional padding to reduce fingerprinting
  discovery_enabled: false
  discovery_port: 19998
  discovery_key: ""
  auto_join: false
  chat_enabled: true
  chat_listen: ":19997"
  chat_psk: ""
  chat_psk_file: ""
  clipboard_share: false
  clipboard_warn: true
  tun_enabled: false
  tun_device: "gargoyle0"
  tun_cidr: "10.42.0.1/24"
  tun_peer_cidr: "10.42.0.0/24"
  onion_only: false
  relay_allowlist: []
  hotspot:
    ssid: ""
    password: ""
    ifname: ""
    shared: true

emulate:
  mode: "tor" # tor|silent|amnesic|host
  privacy_mode: true
  temp_dir: "ram"
  downloads_dir: "downloads"
  display_server: "direct" # direct|cage|gamescope|weston

tunnel:
  type: "frp" # frp|relay|wss
  server: ""
  token: ""
  local_ip: "127.0.0.1"

mail:
  mode: "local" # local|tunnel
  sink: true
  local_server: true
  sink_listen: "127.0.0.1:1025"
  sink_ui: "127.0.0.1:8025"
  mesh_enabled: true
  mesh_listen: ":20025"
  mesh_psk: ""
  mesh_psk_file: ""

ui:
  theme: "dark"
  language: "ru"
  boss_key: true
  boss_mode: "update" # update|htop|blank
  quick_actions:
    standard:
      - label: "Status"
        cmd: "gargoyle status"
      - label: "Mesh status"
        cmd: "gargoyle mesh status"
      - label: "Doctor"
        cmd: "gargoyle doctor"
    fullanon:
      - label: "Status"
        cmd: "gargoyle status"
      - label: "Warnings"
        cmd: "gargoyle status"
      - label: "Tor check"
        cmd: "gargoyle doctor"

tools:
  file: "tools.yaml"
  auto_install: false
  repository: "" # raw URL to packs repo (optional)

update:
  url: ""
  channel: "stable"
  public_key: ""
  auto: false

sync:
  enabled: false
  target: ""
  dir: "./loot"
  psk: ""
  psk_file: ""
  transport: "tls"
  padding_bytes: 256
  depth: 3

telegram:
  enabled: false
  bot_token: ""
  allowed_user_id: 0
  pairing_ttl: 60
  allow_cli: false
  allow_wipe: false
  allow_stats: true


