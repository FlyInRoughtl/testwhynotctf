# LEGACY config file name (ctfvault.yaml). Use gargoyle.yaml instead.
system:
  ram_limit_mb: 2048
  cpu_limit: 2
  locale: "ru"
  edition: "public"

storage:
  persistent: true
  shared: false
  recovery_codes: "recovery_codes.txt"
  usb_enabled: false
  usb_read_only: false
  ram_only: false
  auto_wipe_on_usb_remove: false
  auto_wipe_on_exit: false

network:
  proxy: ""
  mode: "direct"
  vpn_type: ""
  vpn_profile: ""
  gateway_ip: ""
  proxy_engine: "" # sing-box|xray|hiddify
  proxy_config: ""
  dns_profile: "system" # system|xbox|custom
  dns_custom: ""
  doh_url: ""
  doh_listen: "127.0.0.1:5353"
  tor: false
  tor_always_on: false
  tor_strict: false
  tor_trans_port: 9040
  tor_dns_port: 9053
  tor_use_bridges: false
  tor_transport: ""
  tor_bridge_lines: []
  torrc_path: ""
  mac_spoof: true
  wifi_enabled: true
  bluetooth_enabled: false
  ports_open: false

security:
  identity_key_path: "keys/identity.key"
  identity_length: 256
  identity_group: 15

mesh:
  relay_url: ""
  onion_depth: 3
  metadata_level: "standard"
  transport: "tls" # tcp|tls
  padding_bytes: 256 # optional padding to reduce fingerprinting
  discovery_enabled: false
  discovery_port: 19998
  discovery_key: ""
  auto_join: false
  chat_enabled: true
  clipboard_share: false
  clipboard_warn: true
  tun_enabled: false
  tun_device: "gargoyle0"
  tun_cidr: "10.42.0.1/24"
  tun_peer_cidr: "10.42.0.0/24"

emulate:
  privacy_mode: true
  temp_dir: "ram"
  downloads_dir: "downloads"
  display_server: "direct"

tunnel:
  type: "frp" # frp|relay|wss
  server: ""
  token: ""
  local_ip: "127.0.0.1"

mail:
  mode: "local" # local|tunnel
  sink: true
  local_server: true
  sink_listen: "127.0.0.1:1025"
  sink_ui: "127.0.0.1:8025"
  mesh_enabled: true
  mesh_listen: ":20025"
  mesh_psk: ""
  mesh_psk_file: ""

ui:
  theme: "dark"
  language: "ru"
  boss_key: true
  boss_mode: "update"

tools:
  file: "tools.yaml"
  auto_install: false

update:
  url: ""
  channel: "stable"
  public_key: ""
  auto: false

telegram:
  enabled: false
  bot_token: ""
  allowed_user_id: 0
  pairing_ttl: 60
  allow_cli: false
  allow_wipe: false
  allow_stats: true


